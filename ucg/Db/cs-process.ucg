.template on
using System;
.if string(@transaction)
using System.Transactions;
.endif

namespace $(../@cs-namespace)
{
	public abstract class $(@name:p)	
	{
		public State Current { get; private set; }

		public async Task RunAsync()
		{
			while (!IsTerminal)
			{
.foreach state
				await $(@name:p)Async();
.endfor			
			}
		}

		public IsTerminal 
		{ 
			get 
			{
				switch (Current) 
				{
.foreach state[@terminal]
					case $(@name:p):
						return true;
.endfor				
					default:
						return false;
				}
			}
		}
.foreach state

		public async Task $(@name:p)Async()
		{
			while (Current == State.$(@name:p))
			{
				Event evt = await NextEventAsync();
				switch (evt)
				{
.	foreach event 
					case Event.$(@on:p):
.	if string(../../@transaction)
						using (var txn = new TransactionScope())
						{
.		foreach do
.			if @async
							await $(text():p)Async(evt);
.			else
							$(text():p)(evt);
.			endif
.		endfor
.		if string(@next)
							ChangeState(State.$(@next:p));
.		endif
							txn.SetComplete();
						}				
.	else
.		foreach do
.			if @async
						await $(text():p)Async(evt);
.			else
						$(text():p)(evt);
.			endif
.		endfor
.		if string(@next)
						ChangeState(State.$(@next:p));
.		endif
.	endif
						break;
.	endfor
					default:
						await InvalidEventAsync(evt);
						break;
				}
			}
		}
.endfor		

		internal abstract Task<Event> NextEventAsync();

		internal virtual Task ChangeState(State newState)
		{
			Current = newState;
		}

		internal abstract Task InvalidEventAsync(Event evt);

		protected virtual void Before(Event evt, Actions act) {}
		
		protected virtual void After(Event evt, Actions act) {}
.foreach distinct-values(.//do)

.	if @async
		private async Task $(text():p)Async(Event evt)
		{
			Before(evt, Actions.$(text():p));
			await $(text():p)CoreAsync();
			After(evt, Actions.$(text():p));
		}

		internal abstract Task $(text():p)CoreAsync()
.	else
		private void $(text():p)(Event evt)
		{
			Before(evt, Actions.$(text():p));
			$(text():p)Core();
			After(evt, Actions.$(text():p));
		}

		internal abstract void $(text():p)Core();
.	endif
.endfor

		public enum State : byte
		{
.foreach state
			$(@name:p),
.endfor
		}

		public enum Event : byte
		{
.foreach distinct-values(.//event)
			$(@on:p),
.endfor
		}

		public enum Actions : byte
		{
.foreach distinct-values(.//do)
			$(text():p),
.endfor
		}
	}
}